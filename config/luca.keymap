#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT 0
#define SYM     1
#define NAV     2
#define NUM     3
#define WIN     4
#define MSE     5
#define VIM     6

&lt {
  quick_tap_ms = <200>;
};

/ {

    behaviors {

        hml: hml {
            compatible = "zmk,behavior-hold-tap";
            label = "HOME_ROW_LEFT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            hold-trigger-key-positions = <6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35 42 43 44 45 46 47>;
            tapping-term-ms = <150>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <120>;
            flavor = "balanced";
            hold-trigger-on-release;
        };

        hmr: hmr {
            compatible = "zmk,behavior-hold-tap";
            label = "HOME_ROW_RIGHT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <150>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <120>;
            flavor = "balanced";
            hold-trigger-key-positions = <0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29 36 37 38 39 40 41>;
            hold-trigger-on-release;
        };
    };

    macros {
        vim_w_l: vim_w_l {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp W>
                , <&macro_release &kp LCTRL>
                , <&macro_tap &kp H>
                ;
        };
        vim_w_d: vim_w_d {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp W>
                , <&macro_release &kp LCTRL>
                , <&macro_tap &kp J>
                ;
        };
        vim_w_u: vim_w_u {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp W>
                , <&macro_release &kp LCTRL>
                , <&macro_tap &kp K>
                ;
        };
        vim_w_r: vim_w_r {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp W>
                , <&macro_release &kp LCTRL>
                , <&macro_tap &kp L>
                ;
        };
    };

    combos {
        compatible = "zmk,combos";

        combo_capsword {
              timeout-ms = <50>;
              key-positions = <13 16>;
              bindings = <&caps_word>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
/* COLEMAK DH
 *                                            --==     Luca     ==--
 * ,-----------------------------------------.                      ,-----------------------------------------.
 * |  ?   |   Q  |   W  |   F  |   P  |   B  |                      |   J  |   L  |   U  |   Y  |   '  |   ?  |
 * |------+------+------+------+------+------|                      |------+------+------+------+------+------|
 * | ESC* |   A  |   R  |   S  |   T  |   G  |                      |   M  |   N  |   E  |   I  |   O  |   '* |
 * |------+------+------+------+------+------|                      |------+------+------+------+------+------|
 * |  ?   |   Z  |   X  |   C  |   D  |   V  |                      |   K  |   H  |   ,  |   .  |   /  |   ?  |
 * `-----------------------------------------'                      `-----------------------------------------'
   ,-----------------------------------------.                      ,-----------------------------------------.
 * |  ?   |   ?  |  NUM | SYM |  NAV |  MSE  |                      |  ESC | NAV  | VIM  | WIN  |  ?   |  ?   |
 * `-----------------------------------------'                      `-----------------------------------------'
 */

            bindings = <
    &kp N0 &kp Q       &kp W       &kp F       &kp P       &kp B           &lt MSE J &kp L     &kp U       &kp Y       &kp SQT     &kp N4
    &kp ESC &hml LCTRL A &hml LALT R  &hml LGUI S  &hml LSHFT T &kp G       &kp M   &hmr RSHFT N &hmr RGUI E  &hmr LALT I  &hmr RCTRL O &kp &kp SQT
    &kp N2 &kp Z       &kp X       &kp C       &kp D       &kp V           &kp K   &kp H       &kp COMMA   &kp DOT     &kp FSLH    &kp N6
    &kp LS(H) &kp LS(L) &mo NUM    &lt SYM ESC &lt NAV BSPC &mo MSE        &kp ESC &lt NAV SPACE &lt MSE ENTER &mo WIN &kp LG(LS(LBKT)) &kp LG(LS(RBKT))
            >;
        };

        sym_layer {
            bindings = <
   &trans   &kp EXCL    &kp AT    &kp LBRC &kp RBRC &kp PIPE        &kp AMPS  &kp ASTRK &kp LT    &kp GT    &kp SQT   &trans
   &trans   &kp HASH    &kp DLLR  &kp LPAR &kp RPAR &kp GRAVE       &kp MINUS &kp EQUAL &kp PLUS  &kp UNDER &kp SEMI  &trans
   &trans   &kp PRCNT   &kp CARET &kp LBKT &kp RBKT &kp TILDE       &kp BSLH  &kp COLON &kp COMMA &kp DOT   &kp FSLH  &trans
   &trans   &trans      &trans    &trans   &trans   &trans          &trans    &trans    &trans    &trans    &trans    &trans
          >;
      };

        nav_layer {
            bindings = <
   &trans   &none     &none     &none     &none     &none         &none           &kp PG_UP &kp UP   &none     &kp INS    &trans
   &trans   &kp LCTRL &kp LALT  &kp LGUI  &kp LSHFT &none         &kp HOME        &kp LEFT  &kp DOWN &kp RIGHT &kp END    &trans
   &trans   &kp LG(Z) &kp LG(X) &kp LG(C) &kp K_APP &kp LG(V)     &kp LS(LC(TAB)) &kp PG_DN &none    &none     &kp LC(TAB) &trans
   &trans   &trans    &trans    &trans    &kp DEL    &trans       &trans        &kp TAB   &trans   &trans    &trans     &trans
            >;
      };

        num_layer {
            bindings = <
   &trans   &kp F1    &kp F2    &kp F3    &kp F4    &none         &none     &kp N7    &kp N8    &kp N9    &kp N0   &trans
   &trans   &kp F5    &kp F6    &kp F7    &kp F8    &none         &none     &kp N4    &kp N5    &kp N6    &none    &trans
   &trans   &kp F9    &kp F10   &kp F11   &kp F12   &none         &none     &kp N1    &kp N2    &kp N3    &none    &trans
   &trans   &trans    &trans    &trans    &trans    &trans        &none     &none     &kp N0    &kp DOT   &trans   &trans
           >;
      };
        win_layer {
            bindings = <
   &trans   &bt BT_CLR &none &kp C_VOL_UP &none &bt BT_SEL 0              &none  &kp LG(EQUAL) &kp LC(LA(UP)) &kp LC(LA(EQUAL)) &none &trans
   &trans   &out OUT_TOG  &kp C_PREV &kp C_PP &kp C_NEXT &bt BT_SEL 1     &kp LS(LG( N5)) &kp LC(LA(LEFT)) &kp LC(LA(DOWN)) &kp LC(LA(RIGHT)) &kp LC(LA(RET)) &trans
   &trans   &none  &none  &kp C_VOL_DN &kp C_MUTE &bt BT_SEL 2            &none &kp LG(MINUS) &none &kp LC(LA(MINUS)) &none &trans
   &trans   &trans &trans &trans &sys_reset &bootloader                   &bootloader &sys_reset &trans &trans &trans &trans
           >;
      };

        mse_layer {
            bindings = <
   &trans &trans  &none          &mmv MOVE_UP   &none           &trans       &trans          &msc SCRL_UP    &trans    &trans   &trans &trans
   &trans &trans  &mmv MOVE_LEFT &mmv MOVE_DOWN &mmv MOVE_RIGHT &trans       &msc SCRL_LEFT  &mkp MB1        &mkp MB3  &mkp MB2 &msc SCRL_RIGHT &trans
   &trans &trans  &trans         &trans         &trans          &trans       &trans          &msc SCRL_DOWN  &trans    &trans   &trans &trans
   &trans   &trans    &trans         &kp LCTRL   &kp LGUI      &kp LSFT              &none    &none    &none    &none   &none  &trans
            >;
      };
        vim_layer {
            bindings = <
   &trans   &trans  &trans         &trans         &trans          &trans       &trans          &trans        &vim_w_u  &trans     &trans     &trans
   &trans   &trans  &trans         &trans         &trans          &trans       &trans          &vim_w_l      &vim_w_d  &vim_w_r   &trans     &trans
   &trans   &trans  &trans         &trans         &trans          &trans       &kp LS(H)       &trans        &trans    &trans     &kp LS(L)  &trans
   &trans   &trans  &trans         &trans         &trans          &trans       &trans          &trans        &trans    &trans     &trans     &trans
            >;
      };
    };
};
